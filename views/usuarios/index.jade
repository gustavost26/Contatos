extends ../layout
block content
	h1 Usuários
	a(href="/usuarios/create", class="btn btn-success") Cadastrar
	br
	br
	if messages.erro
		div(class="alert alert-danger")
			p #{mensages.erro}
		brbh gvyn
	if messages.info
		div(class="alert alert-success")
			p #{mensages.info}
		br
	if lista.length > 0
		table(class="table table-striped")
			thead
				tr
					th ID
					th Nome
					th E-mail
					th Data
					th Ações
			tbody
				each valor in lista
					tr
						td #{valor._id}
						td #{valor.nome}
						td #{valor.email}
						td #{valor.data_cad}
	else
		p Nenhum registro encontrado!